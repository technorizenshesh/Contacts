<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contacts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_semi</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_semi</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
<style name="WhiteAccent">
<item name="colorAccent">@color/white</item>
</style>
<style name="WhiteAccent_no">
<item name="colorAccent">@color/color_primary</item>
</style>
    <style name="CustomShapeAppearancerounded">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">32dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>
    <style name="CustomShapeAppearanceoval">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">32dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="ShapeAppearance">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">32dp</item>
    </style>
</resources>