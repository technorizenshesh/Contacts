<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                 android:id="@+id/top_main_lay"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_list"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_2sdp"
                >
                <RelativeLayout
                    android:id="@+id/see_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/_5sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/manager_image"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/user_profile"
                        app:civ_border_color="#2196F3"
                        app:civ_border_width="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/manager_image"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight=".3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_weight=".7"
                                android:padding="@dimen/_2sdp"
                                android:fontFamily="@font/poppinsregular"
                                android:textAlignment="textStart"
                                android:textColor="@color/texts_white"
                                android:textSize="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1.3"
                                android:padding="@dimen/_2sdp"
                                android:textAlignment="textStart"
                                android:textColor="@color/texts_white_dim"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_weight="1.7">

                            <ImageView
                                android:id="@+id/details_btn_top"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/open_drop" />

                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/_1sdp"
                      android:padding="@dimen/_2sdp">

                      <TextView
                          android:id="@+id/date3"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="start"
                          android:textFontWeight="400"
                          android:padding="@dimen/_1sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:textAlignment="textStart"
                          android:textColor="@color/texts_white_dim"
                          android:textSize="@dimen/_11sdp"
                          tools:ignore="TextContrastCheck,TextContrastCheck" />

                      <TextView
                          android:id="@+id/date"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/date3"
                          android:layout_gravity="start"
                          android:layout_marginStart="@dimen/_5sdp"
                          android:textFontWeight="500"
                          android:padding="@dimen/_3sdp"
                          android:textAlignment="textStart"
                          android:textColor="@color/texts_white"
                          android:textSize="@dimen/_12sdp" />

                  </RelativeLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:background="@color/texts_white" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/_1sdp"
                      android:padding="@dimen/_2sdp">

                      <TextView
                          android:id="@+id/date3s"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="start"
                          android:textFontWeight="400"
                          android:padding="@dimen/_1sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:textAlignment="textStart"
                          android:textColor="@color/texts_white_dim"
                          android:textSize="@dimen/_11sdp"
                          tools:ignore="TextContrastCheck,TextContrastCheck" />

                      <TextView
                          android:id="@+id/dated"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@id/date3s"
                          android:layout_gravity="start"
                          android:layout_marginStart="@dimen/_5sdp"
                          android:textFontWeight="500"
                          android:padding="@dimen/_3sdp"
                          android:textAlignment="textStart"
                          android:textColor="@color/texts_white"
                          android:textSize="@dimen/_12sdp" />

                  </RelativeLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginStart="@dimen/_10sdp"
                      android:layout_marginEnd="@dimen/_10sdp"
                      android:background="@color/texts_white" />
              </LinearLayout>
            </LinearLayout>
<LinearLayout
    android:visibility="visible"
    android:id="@+id/details_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_secondary"
    >
    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_details"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_2sdp"
        >
        <LinearLayout

            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                 android:id="@+id/tab_name"
                android:layout_weight=".3"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_2sdp"
                android:textAlignment="textStart"
                android:textColor="@color/texts_white"
                android:textSize="@dimen/_13sdp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1.7">

                <ImageView
                    android:id="@+id/details_btn_detail"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/down_arrow_details" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/date33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textFontWeight="400"
                android:padding="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:textAlignment="textStart"
                android:textColor="@color/texts_white_dim"
                android:textSize="@dimen/_11sdp"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <TextView
                android:id="@+id/date333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date33"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_5sdp"
                android:textFontWeight="500"
                android:padding="@dimen/_3sdp"
                android:textAlignment="textStart"
                android:textColor="@color/texts_white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/texts_white" />
    </LinearLayout>

</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2584AB"
                android:id="@+id/tab_history"
                android:visibility="visible"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_list_history"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_2sdp"
                    >
                    <LinearLayout
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <TextView
                            android:id="@+id/tab_name_history"
                            android:layout_weight=".3"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_2sdp"
                            android:textAlignment="textStart"
                            android:textColor="@color/texts_white"
                            android:textSize="@dimen/_13sdp" />



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1.7">

                            <ImageView
                                android:id="@+id/details_btn_history"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/down_arrow_details" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_list_task_two"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_2sdp"
                        >
                        <LinearLayout
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <LinearLayout
                                    android:padding="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp"
                                        tools:ignore="TextContrastCheck,TextContrastCheck" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp"
                                        android:background="@color/texts_white"
                                        tools:ignore="TextContrastCheck,TextContrastCheck" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp"
                                        tools:ignore="TextContrastCheck,TextContrastCheck" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp"
                                        tools:ignore="TextContrastCheck,TextContrastCheck" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_margin="@dimen/_2sdp"
                                        android:textAlignment="textStart"
                                        android:textColor="@color/texts"
                                        android:textSize="@dimen/_10sdp"
                                        tools:ignore="TextContrastCheck,TextContrastCheck" />


                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="@dimen/_3sdp"
                                >


                                <LinearLayout
                                    android:id="@+id/manager_image1"
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_80sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:orientation="vertical"
                                    android:background="@drawable/background_card_task"

                                    android:padding="@dimen/_2sdp">

                                    <TextView
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_2sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/texts_white"
                                        android:textSize="@dimen/_8sdp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_2sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/texts_white"
                                        android:textSize="@dimen/_10sdp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_2sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/texts_white"
                                        android:textSize="@dimen/_8sdp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppinsregular"
                                        android:padding="@dimen/_2sdp"
                                        android:textAlignment="center"
                                        android:textColor="@color/texts_white"
                                        android:textSize="@dimen/_8sdp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_toEndOf="@+id/manager_image1"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_2sdp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_weight=".3"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_2sdp">

                                        <TextView
                                            android:id="@+id/name1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:fontFamily="@font/poppinsregular"
                                            android:padding="@dimen/_2sdp"
                                            android:textAlignment="textStart"
                                            android:textColor="@color/texts"
                                            android:textSize="@dimen/_12sdp" />

                                        <TextView
                                            android:id="@+id/type1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_marginEnd="@dimen/_5sdp"
                                            android:fontFamily="@font/poppinsregular"
                                            android:padding="@dimen/_2sdp"
                                            android:textAlignment="textStart"
                                            android:textColor="@color/texts"
                                            android:textSize="@dimen/_12sdp" />
                                    </LinearLayout>


                                </LinearLayout>


                            </RelativeLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
